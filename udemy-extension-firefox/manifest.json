{
  "manifest_version": 2,
  "name": "Udemy Screenshot",
  "version": "1.0",
  "description": "Capture Udemy video screenshots with timestamp and captions (local use)",
  "permissions": ["tabs", "activeTab", "downloads", "*://*.udemy.com/*"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.udemy.com/*"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "capture-tab": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "Capture current Udemy tab"
    }
  },
  "browser_action": {
    "default_title": "Capture Udemy Tab"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "udemy-screenshot-only-v2@personal",
      "strict_min_version": "109.0"
    }
  }
}
