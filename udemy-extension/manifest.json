{
  "manifest_version": 3,
  "name": "Udemy Screenshot Only",
  "version": "1.0",
  "permissions": ["tabs", "activeTab", "scripting"],
  "host_permissions": ["*://*.udemy.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.udemy.com/*"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "capture-tab": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "Capture current Udemy tab"
    }
  },
  "action": {
    "default_title": "Capture Udemy Tab"
  }
}
